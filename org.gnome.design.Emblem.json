{
    "id": "org.gnome.design.Emblem",
    "runtime": "org.gnome.Platform",
    "runtime-version": "49",
    "sdk": "org.gnome.Sdk",
    "sdk-extensions": [
        "org.freedesktop.Sdk.Extension.rust-stable"
    ],
    "command": "emblem",
    "finish-args": [
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--device=dri"
    ],
    "build-options": {
        "append-path": "/usr/lib/sdk/rust-stable/bin"
    },
    "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules": [
        {
            "name": "emblem",
            "buildsystem": "meson",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://gitlab.gnome.org/World/design/emblem/-/releases/1.6.0/downloads/emblem-1.6.0.tar.xz",
                    "sha256": "7c7022cf2115f6689f565a4202e8c4ba44a05afef140e9c669ac38e18c58b3ea",
                    "x-checker-data": {
                        "type": "json",
                        "url": "https://gitlab.gnome.org/api/v4/projects/17241/releases/",
                        "version-query": ".[0].tag_name",
                        "url-query": ".[0].assets.links.[] | select(.name == \"emblem-\" + $version + \".tar.xz\") | .direct_asset_url"
                    }
                }
            ]
        }
    ]
}
